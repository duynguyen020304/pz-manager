{
  "name": "zomboid-web-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "HOST=0.0.0.0 PORT=3001 next dev -p 3001",
    "build": "next build",
    "start": "HOST=127.0.0.1 next start",
    "deploy": "./scripts/deploy.sh",
    "lint": "eslint",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d && ./scripts/init-db.sh",
    "db:migrate": "node scripts/migrate-admin.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:e2e": "vitest run __tests__/e2e/",
    "test:e2e:watch": "vitest __tests__/e2e/",
    "test:e2e:coverage": "vitest run --coverage __tests__/e2e/"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-query": "^5.90.20",
    "bcryptjs": "^3.0.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "pg": "^8.13.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "recharts": "^3.7.0",
    "systeminformation": "^5.30.7",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20",
    "@types/pg": "^8.11.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^26.0.0",
    "mock-fs": "^5.5.0",
    "msw": "^2.12.10",
    "pg-mem": "^3.0.4",
    "supertest": "^7.2.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.0.5"
  }
}
