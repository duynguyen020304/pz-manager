    "pg": "^8.13.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "recharts": "^3.7.0",
    "systeminformation": "^5.30.7",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
